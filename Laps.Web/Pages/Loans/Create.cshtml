                <span asp-validation-for="LoanApplication.IncomePerMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanApplication.Address" class="control-label"></label>
                <input asp-for="LoanApplication.Address" class="form-control" />
                <span asp-validation-for="LoanApplication.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanApplication.City" class="control-label"></label>
                <input asp-for="LoanApplication.City" class="form-control" />
                <span asp-validation-for="LoanApplication.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanApplication.State" class="control-label"></label>
                <input asp-for="LoanApplication.State" class="form-control" />
                <span asp-validation-for="LoanApplication.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanApplication.Zip" class="control-label"></label>
                <input asp-for="LoanApplication.Zip" class="form-control" />
                <span asp-validation-for="LoanApplication.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanApplication.MobileNumber" class="control-label"></label>
