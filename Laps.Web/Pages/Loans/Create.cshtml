@model Laps.Web.Pages.Loans.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>New Application</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoanApplication.Purpose" class="control-label"></label>
